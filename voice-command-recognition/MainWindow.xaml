<Window x:Class="voice_command_recognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:voice_command_recognition"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
     <DockPanel Margin="10" HorizontalAlignment="Center">
        <WrapPanel DockPanel.Dock="Top">
            <Button x:Name="btnStartListen" Click="btnStartListen_Click" Content="start listeing" Height="40" Width="150" Margin="25 10 50 10"/>
            <Button x:Name="btnStopListen" Click="btnStopListen_Click" Content="stop listening" Width="150" Height="40" IsEnabled="False"/>
        </WrapPanel>
        <TextBox Margin="0,60,0,71.4" Name="txtSpeech" AcceptsReturn="True" TextWrapping="Wrap" Width="400" HorizontalAlignment="Center" Text="Click start listening....."/>
     </DockPanel>
</Window>
